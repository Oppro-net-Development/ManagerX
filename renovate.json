{
  "extends": ["config:base"],
  "labels": ["dependencies"],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 3,
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "ManagerX â€“ Dependency Updates",
  "automerge": false,
  "rangeStrategy": "pin",
  "timezone": "Europe/Berlin",
  "schedule": ["immediately"],
  "pip_requirements": {
    "fileMatch": ["requirements/.*\\.txt"]
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "Patch & Minor updates",
      "automerge": false
    },
    {
      "matchUpdateTypes": ["major"],
      "groupName": "Major updates",
      "automerge": false
    }
  ]
}
